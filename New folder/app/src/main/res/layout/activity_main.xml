<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

   <RelativeLayout
       android:id="@+id/onere"
       android:layout_width="match_parent"
       android:layout_height="100dp">

      <ImageView
          android:layout_width="100dp"
          android:layout_height="wrap_content"
         android:src="@drawable/pizza"/>

      <TextView
          android:id="@+id/admin_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="170dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="100dp"
          android:ellipsize="end"
          android:text="Admin"
          android:textColor="#a6c1ee"
          android:textSize="30dp" />

      <TextView
          android:id="@+id/empMangment_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="120dp"
          android:layout_marginEnd="60dp"
          android:layout_marginTop="60dp"
          android:ellipsize="end"
          android:text="Employer Managment"
          android:textColor="@color/black"
          android:textSize="20dp" />


   </RelativeLayout>

   <RelativeLayout
       android:id="@+id/twore"
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:layout_below="@id/onere">

      <TextView
          android:id="@+id/addnew"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="120dp"
          android:layout_marginEnd="60dp"
          android:layout_marginTop="10dp"
          android:ellipsize="end"
          android:text="Add New Employer"
          android:textColor="#FF5733"
          android:textSize="20dp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:layout_marginStart="150dp"
         android:layout_marginTop="40dp"
         android:text="Emp ID: EMP008"/>


   </RelativeLayout>

   <RelativeLayout
       android:id="@+id/formre"
      android:layout_below="@+id/twore"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/name1"
          android:layout_marginStart="10dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="92dp"
          android:text="Name"/>

      <EditText
          android:id="@+id/editName"
          android:layout_width="match_parent"

          android:layout_height="40dp"
          android:layout_below="@id/name1"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginBottom="5dp"
          android:ems="10"
          android:hint="Type name.."
          android:inputType="textPersonName"
          android:text="" />


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/name2"
          android:layout_below="@id/editName"
          android:layout_marginStart="10dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="92dp"
          android:text="Email"/>

      <EditText

          android:id="@+id/editEmail"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@id/name2"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginBottom="5dp"
          android:ems="10"
          android:hint="Type email.."
          android:inputType="textPersonName"
          android:text=""
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/name3"
          android:layout_below="@id/editEmail"
          android:layout_marginStart="10dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="92dp"
          android:text="Department"/>

      <EditText

          android:id="@+id/editDepartment"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@id/name3"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginBottom="5dp"
          android:ems="10"
          android:hint="Type department.."
          android:inputType="textPersonName"
          android:text=""
          />


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/name4"
          android:layout_below="@id/editDepartment"
          android:layout_marginStart="10dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="92dp"
          android:text="Branch"/>

      <EditText

          android:id="@+id/editBranch"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@id/name4"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginBottom="5dp"
          android:ems="10"
          android:hint="Type branch.."
          android:inputType="textPersonName"
          android:text=""
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/name5"
          android:layout_below="@id/editBranch"
          android:layout_marginStart="10dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="92dp"
          android:text="NIC.."/>

      <EditText

          android:id="@+id/editNic"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@id/name5"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginBottom="5dp"
          android:ems="10"
          android:hint="Type nic.."
          android:inputType="textPersonName"
          android:text=""
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/name6"
          android:layout_below="@id/editNic"
          android:layout_marginStart="10dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="92dp"
          android:text="Contact"/>

      <EditText

          android:id="@+id/editcontact"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@id/name6"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginBottom="5dp"
          android:ems="10"
          android:hint="Type contact.."
          android:inputType="textPersonName"
          android:text=""
          />


   </RelativeLayout>

   <Button
       android:layout_below="@+id/formre"
       android:id="@+id/cancel_button"
       android:layout_width="100dp"
       android:layout_marginLeft="20dp"
       android:layout_height="wrap_content"
       android:backgroundTint="#FF0000"
       android:layout_marginTop="20dp"
       android:text="cancel" />

   <Button
       android:layout_below="@+id/formre"
       android:id="@+id/addnew_button"
       android:layout_width="150dp"
       android:layout_marginLeft="270dp"
       android:layout_marginRight="20dp"
       android:layout_height="wrap_content"
       android:backgroundTint="#FF0000"
       android:layout_marginTop="20dp"
       android:text="Add new" />

</RelativeLayout>
</ScrollView>